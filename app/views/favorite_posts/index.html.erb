<h1>お気に入りの投稿</h1>
<div class="row posts">
  
   <% @favorite_posts.each do |favorite_post| %>      
     <div class="col-xs-12 col-md-6 post-panel">
       <p><%= favorite_post.post.user.name %>のPicture</p>
       <%= image_tag favorite_post.post.picture %>
       <div>
        <p>コメント: <%= favorite_post.post.text %></p>
        
        <%= link_to '詳細', favorite_post.post, class: 'btn btn-default' %>
        <% if logged_in? %>
          <% if favorite_post.post.user_id == current_user.id %>
        <%= link_to '編集', edit_post_path(favorite_post.post), class: 'btn btn-info' %>
        <%= link_to '削除', favorite_post.post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          <% end %>
        <% end %>
        </div>
     </div>
    <% end %>
  
</div>
